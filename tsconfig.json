{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2022",
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "paths": {
      "@components/*": ["src/renderer/components/*"]
    },
    "isolatedModules": true,
    "moduleResolution": "Node",
    "allowJs": true
  },
  "include": ["src/vue-shim.d.ts", "src/globals.d.ts", "src/**/*.ts", "src/**/*.vue", "src/**/*.js"]
}
